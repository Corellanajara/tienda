{# WIDGET PARA BANNERS DE LA ZONA 1 DE BANNERS #}

{% set banners = values.widgets.getBanners('Aside derecho',0,-1,1) %}
{% set nBanner = banners|length %}

<div id="newsticker-demo">    
{% if nBanner<=3 %}
    <ul>
        {% for banner in banners %}
        <li>
            <div class="thumbnail">
                {% if banner.url.url %}
                    <a href="{{banner.url.url}}" title="{{banner.titulo}}" rel="pop-up">
                {% endif %}
                    <img src="{{app.path}}/{{theme}}/{{banner.imagenes[0]}}" title="{{banner.nombre}}" alt="{{banner.nombre|date('')}}" />
                {% if banner.url.url %}
                    </a>
                {% endif %} 
            </div>
        </li>
        {% endfor %}

    </ul>        
{% else %}  
    <div class="newsticker-jcarousellite">              
        <ul>
            {% for banner in banners %}
            <li>
                <div class="thumbnail">
                    {% if banner.url.url %}
                        <a href="{{banner.url.url}}" title="{{banner.titulo}}" rel="pop-up">
                    {% endif %}
                    <img src="{{app.path}}/{{theme}}/{{banner.imagenes[0]}}" title="{{banner.titulo}}" alt="{{banner.titulo}}" />
                    {% if banner.url.url %}
                        </a>
                    {% endif %}                            
                </div>
            </li>  
            {% endfor %}                                                                                                                           
        </ul>
    </div>
{% endif %}           
</div> 