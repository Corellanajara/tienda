{# DESPLEGABLE CON TODAS LAS MARCAS #}

{% set marcas = values.widgets.getMarcas(2) %}

{% if marcas|length %}
    <div class="vert-offset-top-5 widget">
        <h4>{{macro.idioma('todasLasMarcas')}}</h4>
        <div class="list-group">
            <select name="marca" id="marca" onchange="document.location.href = $(this).val();">
                {% for marca in marcas %}
                    <option value="{{marca.Href.url}}">{{marca.Titulo}}</option>
                {% endfor %}
            </select>
        </div>
    </div>
{% endif %}