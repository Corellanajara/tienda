{% block content %}
<section class="contenedorGrandeCentral">
    <article class="colIzqda">
        <h1>{{values.LABELS.accesoPrivado}}</h1>
        <p>{{values.LABELS.accesoPrivadoTexto}}</p>
                                 
        <form name="formLogin" id="formLogin" method="POST" action="">
            <div id="input_oculto">
                <input name="controller" value="ZonaPrivada" />
                <input name="action" value="login" />
            </div>

            <article>
                <!-- <label>{{values.LABELS.eMail}}</label> -->
                <input autocomplete="off" type="text" name="login[Email]" id="login_Email" value="{{values.login.Email}}" {%if values.login.error == '1'%}class="celdaError"{%else%}class="celda"{% endif %} placeholder="Usuario" />
            </article>

            <article>
                <!-- <label>{{values.LABELS.contrasena}}</label> -->
                <input autocomplete="off" type="password" name="login[Password]" {%if values.login.error == '2'%}class="celdaError"{%else%}class="celda"{%endif%} placeholder="ContraseÃ±a" />
            </article>

            <article id="contenedorEnviar">
                <a href="{{app.path}}/olvido" class="olvido">{{values.LABELS.olvideMiContrasena}}</a>
                <input type="submit" value="{{values.LABELS.enviar}}" data-type="submit" onclick="$('#formLogin').submit();" title="{{values.LABELS.enviar}}" class="boton btn_azul right" />
            </article>
        </form>
    </article>     
    <article class="colDrcha">
        <h1>{{values.LABELS.accesoNuevo}}</h1>
        <p><a href="{{app.path}}/registro">{{values.LABELS.accesoNuevoTexto}}</a></p>
    </article>     
</section>
{% endblock %}

