{# PARA MOSTRAR LOS LOGOS DE FORMA ALEATORIA #}

{% set logos = {'0':'asociacion-autonoma-instaladores-electricos-telecomunicaciones-granada.png','1':'asociacion-instaladores-granada.png'} %}
{% set titles = {'0':macro.idioma('asociacionAutonomaInstaladoresElectricosYdeTelecomunicacionesDeGranada'),'1':macro.idioma('asociacionInstaladoresGranada')} %}
{% set keyLogo1 = random([0,1]) %}
{% set keyLogo2 = (keyLogo1 == 1) ? 0: 1 %}

<section class="contenedorCentral">
    <header>
        <h1>
            <a href="{{app.path}}" title="{{titles[keyLogo1]}}">
                <img src="{{app.path}}/{{theme}}/images/{{logos[keyLogo1]}}" title="" alt="">
            </a>
        </h1>
        <h1>
            <a href="{{app.path}}" title="{{titles[keyLogo2]}}">
                <img src="{{app.path}}/{{theme}}/images/{{logos[keyLogo2]}}" title="" alt="">
            </a>
        </h1>

        <article id="acceso">
            <article id="telefono"><span class="sprite"></span>{{values.datosContacto.telefono1}}</article>
            <article id="accesoIdentificado">
                {% if user.Id > 0 %}
                    <span>{{user.nombre}}</span><br/>
                    <a href="{{app.path}}/salir">{{macro.idioma('cerrarSesion')}}</a>
                {% elseif values.controller != 'ZonaPrivada' %}
                    <span class="sprite"></span>
                    <a href="{{app.path}}/zona-privada" title="{{macro.idioma('accesoIdentificado')}}">{{macro.idioma('accesoIdentificado')}}</a>                  
                {% endif %}
            </article>
        </article>
    </header>
</section>