    <section class="productos marginBottom40">
        {% include '_global/filtroOrdenar.html.twig' %}
        {% include '_global/producto.html.twig' %}
    </section>

    <section>
        {% include '_global/noticias.html.twig' %}
        {% include '_global/articulosRelacionados.html.twig' %}
    </section>
#}
{% endblock %}