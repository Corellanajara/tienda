<div class="grid_8">
    <dl class="faq_list">
        {% for pregunta in values.faq.contenidos %}
            <dt><span class="marker">P?</span>{{pregunta.Titulo}}</dt>
            <dd><span class="marker">R.</span>
                <div>{{ pregunta.Desarrollo }}</div>
            </dd>
        {% else %}
            {{values.TEXTS.noHayFaqs}}
        {% endfor %}		
    </dl>
</div>

{% if values.faq.paginacion.totalPaginas > 0 %}
<div id="pagination-wrapper">    
    <div id="pagination">
        <form name="paginacion" id="formPaginacion" method="POST" action="">
            <input name="controller" value="{{values.controller}}" type="hidden" />
            <input name="action" id="action" value="index" type="hidden" />
            <input name="pagina" id="pagina" value="" type="hidden" />
            <input name="texto" id="texto" value="{{values.faq.texto}}" type="hidden" />
            
            <span>{{values.TEXTS.pagina}} {{values.faq.paginacion.pagina}} {{values.TEXTS.de}} {{values.faq.paginacion.totalPaginas}}</span>            
            {% if values.faq.paginacion.pagina > 1 %}
                <a href="#" onclick="$('#pagina').val('{{values.faq.paginacion.pagina-1}}');$('#formPaginacion').submit();" title="{{values.TEXTS.anterior}}" class="inactive">{{values.TEXTS.anterior}}</a>                    
            {% endif %}
            {% if values.faq.paginacion.pagina < values.faq.paginacion.totalPaginas %}
                <a href="#" onclick="$('#pagina').val('{{values.faq.paginacion.pagina+1}}');$('#formPaginacion').submit();" title="{{values.TEXTS.siguiente}}" class="inactive">{{values.TEXTS.siguiente}}</a>              
            {% endif %}
        </form>
        <div class="line"></div>
    </div>
</div>
{% endif %}